<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sea_green_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="18dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:paddingTop="2dp"
            android:text="새싹 농장"
            android:textSize="20sp"
            android:textColor="@color/gray6"
            android:gravity="left|center"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/sidebar"
            android:src="@drawable/svg_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/fragment_bottom"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:background="@color/white"
            >

            <ImageView
                android:src="@drawable/svg_location"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="충청북도 충주시"
                android:textSize="12sp"
                android:layout_gravity="left"
                />

        </LinearLayout>

        <!--        날씨 정보-->
        <LinearLayout
            android:id="@+id/weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/area"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_white_rectangle"
            >

            <ImageView
                android:background="@drawable/temp_img_ellipse"
                android:layout_width="72dp"
                android:layout_height="72dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.07.20"
                    android:textSize="12sp"
                    android:textColor="#737373"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="20sp"
                        android:textColor="#737373"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맑음"
                        android:textSize="14sp"
                        android:textColor="#737373"
                        android:layout_marginHorizontal="4dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/temper_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최고 30°C"
                        android:textSize="12sp"
                        android:textColor="@color/active_red"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginHorizontal="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최저 18°C"
                        android:textSize="12sp"
                        android:textColor="@color/active_blue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginHorizontal="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="습도 60%"
                        android:textSize="12sp"
                        android:textColor="@color/gray5"
                        />

                </LinearLayout>


        </LinearLayout>



        </LinearLayout>


    <!--    달력-->

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather"

            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C8C8C8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            />

        <!--    오늘 일감-->
        <LinearLayout
            android:id="@+id/today_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/background_white_rectangle"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 일감"
                android:textSize="14sp"
                android:textColor="#404040"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/new_todo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:src="@drawable/svg_todo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <EditText
                    android:id="@+id/task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="입력"
                    android:textSize="16sp"
                    android:fontFamily="@font/notosans_bold"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/gray5"
                    android:includeFontPadding="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/todo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                />

            <Button
                android:id="@+id/add_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_primary_nopadding"
                android:text="일감 추가하기"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                />


        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_fragment"
        app:itemTextColor="@color/sea_green_dark2"
        app:itemIconTint="@color/sea_green_dark2"
        app:labelVisibilityMode="labeled"
        />
</androidx.constraintlayout.widget.ConstraintLayout>