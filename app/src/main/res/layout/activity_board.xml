<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:text="이야기터"
        android:textSize="20sp"
        android:textColor="@color/gray6"
        android:gravity="left|center"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:tabGravity="center"
        app:tabTextColor="@color/gray4"
        app:tabSelectedTextColor="@color/gray6"
        app:tabIndicatorColor="@color/sea_green_dark1" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFFFF"
        app:itemTextColor="@color/sea_green_dark2"
        app:itemIconTint="@color/sea_green_dark2"
        app:menu="@menu/menu_fragment"
        app:labelVisibilityMode="labeled"
        />

</androidx.constraintlayout.widget.ConstraintLayout>