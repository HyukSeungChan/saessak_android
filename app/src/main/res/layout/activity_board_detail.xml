<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    상단바-->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="2dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_arrowleft"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginRight="4dp"
            />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/comment_create"
        >



        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_primary_stroke"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp"
                android:layout_marginHorizontal="20dp"
                android:text="재배작물"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textColor="@color/sea_green_dark2"
                android:textSize="10sp"/>

            <LinearLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/temp_img_ellipse"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="맴버명"
                        android:textSize="16sp"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:includeFontPadding="false"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="7시간전"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_regular"
                            android:textColor="@color/gray5"
                            android:layout_gravity="left"
                            android:includeFontPadding="false"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/user"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical"
                android:gravity="left"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제모오오옥오오오옥"
                    android:textSize="16sp"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="내-ㅇ ㅛ ㅇ Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard du"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="@color/gray5"
                    android:includeFontPadding="false"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/image"
                    android:src="@drawable/temp_img_ellipse"
                    android:layout_width="320dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    />

            </LinearLayout>


            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/like_layout"
                android:layout_height="1dp"
                android:background="@color/gray3"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice"
                    android:orientation="horizontal"
                    android:gravity="left|center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="댓글"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@color/gray6"
                        android:textAlignment="center"
                        android:includeFontPadding="false"
                        />

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/notosans_bold"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@color/gray6"
                        android:textAlignment="center"
                        android:includeFontPadding="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/comment_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <LinearLayout
            android:id="@+id/edittext_layout"
            android:layout_width="0dp"
            android:background="@drawable/edittext_normal"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/edittext"
                android:layout_width="match_parent"
                android:hint="댓글을 입력해주세요"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:background="@drawable/background_white_rectangle"
                android:layout_height="26dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/send"
            android:src="@drawable/svg_send"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>