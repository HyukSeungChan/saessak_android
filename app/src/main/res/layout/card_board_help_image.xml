<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
>

    <TextView
        android:id="@+id/agriculture"
        android:background="@drawable/rectangle_primary_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="농작물채소"
        android:textSize="10sp"
        android:textColor="@color/sea_green_dark1"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10"
            >



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
            android:textSize="14sp"
            android:textColor="#787878"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_marginLeft="16dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/temp_img"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        >


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n시간 전"
            android:textSize="12sp"
            android:textColor="#737373"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_like"
            />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            android:textColor="#737373"
            android:layout_marginLeft="6dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_chat"
            android:layout_marginLeft="6dp"
            />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            android:textColor="#737373"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>


</LinearLayout>