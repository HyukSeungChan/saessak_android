<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <!--    상단바-->
    <LinearLayout
        android:id="@+id/upbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_arrowleft"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취향 농업 입력"
            android:textSize="20sp"
            android:layout_gravity="left|center"
            android:textAlignment="center"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_after"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="건너뛰기"
            android:background="@color/white"
            android:textColor="@color/sea_green_dark3"
            android:fontFamily="@font/notosans_regular"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:stateListAnimator="@null"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="50"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="희망 농업을 선택해 주세요"
        android:fontFamily="@font/notosans_bold"
        android:textSize="18sp"
        android:textColor="@color/gray6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:layout_marginBottom="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        
        

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농업 구분"
            android:fontFamily="@font/notosans_bold"
            android:textSize="18sp"
            android:textColor="@color/gray5"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:includeFontPadding="false"
            />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="left">
    
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_qkxshdtk"
                android:layout_width="66dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="밭농사"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_rhktn"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="과수"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_gkdntm"
                android:layout_width="66dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="하우스"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_shs"
                android:layout_width="44dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="논"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                />
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="left">
    
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_xmrdydwkranf"
                android:layout_width="79dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="특용 작물"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_rlxk_shddjq"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="기타"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
    
        </LinearLayout>
    
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="희망 작목"
            android:fontFamily="@font/notosans_bold"
            android:textSize="18sp"
            android:textColor="@color/gray5"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:includeFontPadding="false"
            />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="left">
    
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_shdwkranfcoth"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="농작물 채소"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_rhktlf"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="과실"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_ghkgnpwkranf"
                android:layout_width="77dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="화훼작물"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />
    
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chip_rlxk_wkrahr"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:background="@drawable/chip_not_select"
                android:text="기타"
                android:textColor="@drawable/chip_font"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                />
    
        </LinearLayout>
        
    </LinearLayout>
        
        

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="22dp"
        android:text="다음"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"
        android:background="@drawable/button_gray"
        android:includeFontPadding="false"
        />

</LinearLayout>