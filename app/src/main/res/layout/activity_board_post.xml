<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp">


    <!--    상단바-->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="12dp"
        android:layout_marginBottom="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_arrowleft"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:textSize="20sp"
            android:textColor="@color/gray5"
            android:gravity="left|center"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/notosans_bold"
            android:textColor="@color/gray4"
            android:includeFontPadding="false"
            />



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="농촌 이야기"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/gray5"
        android:includeFontPadding="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4"
        android:layout_marginVertical="12dp"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="제목을 입력하세요"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/gray4"
        android:includeFontPadding="false"
        android:paddingVertical="10dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_bold"
            android:textColor="@color/sea_green_dark1"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/25"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/gray5"
            android:includeFontPadding="false"/>

    </LinearLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="내용을 입력하세요"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/gray4"
        android:includeFontPadding="false"
        android:paddingVertical="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_bold"
            android:textColor="@color/sea_green_dark1"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/400"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/gray5"
            android:includeFontPadding="false"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="첨부된 이미지"
        android:textSize="16sp"
        android:textColor="@color/gray5"
        android:gravity="left|center"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="이미지를 추가할 수 있어요. (최대 1장)"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/gray4"
        android:includeFontPadding="false"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/svg_camera_gray"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layerType="software"
            android:padding="28dp"
            android:background="@drawable/image_gray_rectangle"
            android:layout_marginVertical="6dp"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/update"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="수정하기"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:background="#66000000"
            android:layout_marginVertical="6dp"
            android:includeFontPadding="false"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4"
        android:layout_marginVertical="12dp"/>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="카테고리 선택"
        android:textSize="16sp"
        android:textColor="@color/gray5"
        android:gravity="left|center"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="게시글에 보여질 카테고리를 선택하세요."
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/gray4"
        android:includeFontPadding="false"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="농업 구분"
                android:fontFamily="@font/notosans_bold"
                android:textSize="10sp"
                android:textColor="@color/gray4"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:includeFontPadding="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="left">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_qkxshdtk"
                    android:layout_width="66dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="밭농사"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_rhktn"
                    android:layout_width="55dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="과수"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_gkdntm"
                    android:layout_width="66dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="하우스"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_shs"
                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="논"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="left">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_xmrdydwkranf"
                    android:layout_width="79dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="특용 작물"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_rlxk_shddjq"
                    android:layout_width="55dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="기타"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작목 구분"
                android:fontFamily="@font/notosans_bold"
                android:textSize="10sp"
                android:textColor="@color/gray4"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:includeFontPadding="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="left">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_shdwkranfcoth"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="농작물 채소"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_rhktlf"
                    android:layout_width="55dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="과실"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_ghkgnpwkranf"
                    android:layout_width="77dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="화훼작물"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginRight="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/chip_rlxk_wkrahr"
                    android:layout_width="55dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_not_select"
                    android:text="기타"
                    android:textColor="@drawable/chip_font"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
