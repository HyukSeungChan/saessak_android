<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:gravity="center_horizontal"
    >


    <!--    상단바-->
    <LinearLayout
        android:id="@+id/upbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="20dp"
        android:background="#FFFFFF"
        android:gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="농장이름"
            android:textSize="24sp"
            android:layout_gravity="left"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/sidebar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/svg_info"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/upbar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_bottom"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:background="#FFFFFF"
            android:text="충청북도 충주시"
            android:paddingTop="12dp"
            android:textSize="12sp"
            android:layout_gravity="left"
            />


        <!--        날씨 정보-->
        <LinearLayout
            android:id="@+id/weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/area"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_white_rectangle"
            >

            <ImageView
                android:src="@drawable/temp_img_ellipse"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.07.20"
                    android:textSize="12sp"
                    android:textColor="#737373"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="20sp"
                        android:textColor="#737373"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맑음"
                        android:textSize="14sp"
                        android:textColor="#737373"
                        android:layout_marginHorizontal="4dp"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최고 30°C | 최저 18°C | 60%"
                    android:textSize="12sp"
                    android:textColor="#737373"
                    />



        </LinearLayout>



        </LinearLayout>


    <!--    달력-->

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C8C8C8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            />

        <!--    오늘 일감-->
        <LinearLayout
            android:id="@+id/today_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/background_white_rectangle"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 일감"
                android:textSize="14sp"
                android:textColor="#404040"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:src="@drawable/svg_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감자 수확하기"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#737373"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:src="@drawable/svg_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감자 수확하기"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#737373"
                    />

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_fragment"
        />
</androidx.constraintlayout.widget.ConstraintLayout>