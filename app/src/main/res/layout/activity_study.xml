<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_onlytitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_bottom"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="#FFFFFF"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


<!--            농업 필수 교육-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:background="#F4F4F4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="농업 필수 교육"
                android:fontFamily="@font/notosans_bold"
                android:textSize="18sp"
                android:lineHeight="24sp"
                android:textColor="#404040"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자리 지원을 위해 농업 교육 수료증이 필요해요"
                android:fontFamily="@font/notosans_regular"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:textColor="#737373"/>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="교육 이수하기"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:fontFamily="@font/notosans_regular"
                android:background="@drawable/background_gray_rectangle"/>

        </LinearLayout>

            <!--           지원 정책-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지원정책"
                    android:fontFamily="@font/notosans_bold"
                    android:textSize="18sp"
                    android:lineHeight="24sp"
                    android:textColor="#404040"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상혁님에게 맞는 지원 정책을 찾아보세요"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:textColor="#737373"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:src="@drawable/temp_img"
                        android:scaleType="centerCrop"
                        android:background="#FFFFFF"
                        android:layout_width="96dp"
                        android:layout_height="116dp"/>
                    <ImageButton
                        android:src="@drawable/temp_img"
                        android:layout_marginHorizontal="13dp"
                        android:scaleType="centerCrop"
                        android:background="#FFFFFF"
                        android:layout_width="96dp"
                        android:layout_height="116dp"/>
                    <ImageButton
                        android:src="@drawable/temp_img"
                        android:scaleType="centerCrop"
                        android:background="#FFFFFF"
                        android:layout_width="96dp"
                        android:layout_height="116dp"/>

                </LinearLayout>

            </LinearLayout>


            <!--           농작물 정보-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="농작물 정보"
                        android:fontFamily="@font/notosans_bold"
                        android:textSize="18sp"
                        android:lineHeight="24sp"
                        android:textColor="#404040"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:src="@drawable/svg_arrowright"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#FFFFFF"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageButton
                            android:src="@drawable/temp_img"
                            android:scaleType="centerCrop"
                            android:background="#FFFFFF"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:lineHeight="14sp"
                            android:fontFamily="@font/notosans_regular"
                            android:text="관심작물1"/>
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


            <!--           생활 농업 꿀팁-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생활 농업 꿀팁"
                        android:fontFamily="@font/notosans_bold"
                        android:textSize="18sp"
                        android:lineHeight="24sp"
                        android:textColor="#404040"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:src="@drawable/svg_arrowright"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#FFFFFF"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageButton
                            android:src="@drawable/temp_img"
                            android:scaleType="centerCrop"
                            android:background="#FFFFFF"
                            android:layout_width="154dp"
                            android:layout_height="92dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:lineHeight="14sp"
                            android:fontFamily="@font/notosans_regular"
                            android:text="영상제목"
                            android:layout_gravity="left"/>
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_fragment"
        app:itemTextColor="@color/sea_green_dark2"
        app:itemIconTint="@color/sea_green_dark2"
        app:labelVisibilityMode="labeled"
        />

</androidx.constraintlayout.widget.ConstraintLayout>