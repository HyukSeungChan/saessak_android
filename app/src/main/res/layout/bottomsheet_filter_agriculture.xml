<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bottomSheetDashBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_draggable="false"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="농업 구분"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintBottom_toTopOf="@id/button_ok"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:clipToPadding="false"
        >

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="농업 전체"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/check_all"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_rhktn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_rhktn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과수"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_rhktn"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_qkx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_qkx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밭농사"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_qkx"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_gkdntm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_gkdntm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하우스"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_gkdntm"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_shs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_shs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="논"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_shs"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_xmrdyd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_xmrdyd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="특용작물"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_xmrdyd"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_rlxk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/text_rlxk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textSize="14sp"
                    android:textColor="@color/gray6"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/check_rlxk"
                    android:background="@drawable/svg_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/sea_green_dark1"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>