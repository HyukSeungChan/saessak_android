<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

<!--    <ImageView-->
<!--        android:id="@+id/farm_image"-->
<!--        android:layout_width="106dp"-->
<!--        android:layout_height="79.5dp"-->
<!--        android:src="@drawable/temp_img"-->
<!--        />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="충청북도 제천시 | 하연농장"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하연농장 고용인력 찾습니다"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/21 ~ 7/24"
            android:layout_marginVertical="12dp"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_primary_stroke"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp"
                android:textColor="@color/sea_green_dark2"
                android:text="밭농사"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/crops_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_primary_stroke"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp"
                android:text="농작물 채소"
                android:layout_marginLeft="8dp"
                android:textColor="@color/sea_green_dark2"
                android:textSize="12sp"/>


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="800dp"
        android:background="@drawable/svg_bookmark"/>

</LinearLayout>