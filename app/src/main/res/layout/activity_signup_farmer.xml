<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >
    <!--    상단바-->
    <LinearLayout
        android:id="@+id/upbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="18dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_arrowleft"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="농장 정보 입력"
            android:textSize="20sp"
            android:layout_gravity="left|center"
            android:textAlignment="center"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            />


    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="25"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농장 이름"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/gray6"
            />

        <LinearLayout
            android:id="@+id/edittext_title_layout"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_normal"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            >

            <EditText
                android:id="@+id/edittext_title"
                android:layout_width="match_parent"
                android:hint="농장 이름을 입력해주세요"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:background="@drawable/background_white_rectangle"
                android:layout_weight="1"
                android:layout_height="20dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농장 설명"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/gray6"
            />

        <LinearLayout
            android:id="@+id/edittext_description_layout"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_normal"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            >

            <EditText
                android:id="@+id/edittext_description"
                android:layout_width="match_parent"
                android:hint="농장 설명을 입력해주세요(선택사항)"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:background="@drawable/background_white_rectangle"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/decription_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/300자"
            android:fontFamily="@font/notosans_bold"
            android:textSize="10sp"
            android:textAlignment="textEnd"
            android:textColor="#9B9B9B"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농장 사진"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/gray6"
            />

        <EditText
            android:layout_width="match_parent"
            android:hint="농장 대표 사진 한 장을 설정해주세요"
            android:layout_marginVertical="8dp"
            android:textSize="14sp"
            android:background="@drawable/background_white_rectangle"
            android:layout_weight="1"
            android:layout_height="20dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            >

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/svg_camera_gray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layerType="software"
                android:padding="28dp"
                android:background="@drawable/image_gray_rectangle"
                android:layout_marginVertical="6dp"
                />

            <TextView
                android:visibility="invisible"
                android:id="@+id/update"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="수정하기"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center"
                android:background="#66000000"
                android:layout_marginVertical="6dp"
                android:includeFontPadding="false"
                />

        </FrameLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농장 위치"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/gray6"
            />

        <LinearLayout
            android:id="@+id/edittext_position_layout"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_normal"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            >

            <EditText
                android:id="@+id/edittext_position"
                android:layout_width="match_parent"
                android:hint="지번, 도로명, 건물명으로 검색"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:background="@drawable/background_white_rectangle"
                android:layout_weight="1"
                android:layout_height="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농장 번호"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/gray6"
            />

        <LinearLayout
            android:id="@+id/edittext_phone_layout"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_normal"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            >

            <EditText
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:hint="농장 전화번호를 입력해주세요"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:background="@drawable/background_white_rectangle"
                android:layout_weight="1"
                android:layout_height="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tooltip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="농장 전화번호가 없는 경우 농장에 대한 문의를 할 수 있는 전호번호로 입력해주세요."
            android:fontFamily="@font/notosans_bold"
            android:textSize="10sp"
            android:textColor="#9B9B9B"
            />




    </LinearLayout>

</ScrollView>


    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="22dp"
        android:text="다음으로"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"
        android:background="@drawable/button_gray"
        android:includeFontPadding="false"
        />

</LinearLayout>